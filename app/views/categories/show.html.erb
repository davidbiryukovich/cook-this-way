<div class="row">
  <div class="col-md-8">
    <h1>
      <%= @category.name %>
    </h1>
  </div>

  <div class="col-md-4">
    <h1 class="btn-right">
      <%= link_to 'Delete', {action: 'destroy', id: @category.id}, {class: 'btn btn-danger btn-lg no-print', method: :delete, data: {confirm: 'Are you sure?'}} %>
      <%= link_to 'Edit', {id: @category.id, action: 'edit'}, {class: 'btn btn-primary btn-lg no-print'} %>
      <%= link_to 'Back', {action: 'index'}, {class: 'btn btn-default btn-lg no-print'} %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Description</h3>
      </div>
      <div class="panel-body">
        <%= @category.description %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recipes</h3>
      </div>
      <div class="panel-body">
        <%=  %>
      </div>
    </div>
  </div>
</div>

<div class="row action-row">
  <%= link_to 'Back', {action: 'index'}, {class: 'btn btn-default btn-lg no-print'} %>
  <%= link_to 'Edit', {id: @category.id, action: 'edit'}, {class: 'btn btn-primary btn-lg no-print'} %>
  <%= link_to 'Delete', {action: 'destroy', id: @category.id}, {class: 'btn btn-danger btn-lg no-print', method: :delete, data: {confirm: 'Are you sure?'}} %>
</div>