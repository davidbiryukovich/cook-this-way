<%= form_for @recipe, url: {action: 'update'} do |f| %>

  <div class="row">
    <div class="col-md-7">
      <h1>
        <%= f.text_field :name, {class: 'form-control input-lg'} %>
      </h1>
    </div>

    <div class="col-md-2">
      <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name', @recipe.category_id), {}, {class: 'form-control input-lg select-category'} %>
    </div>


    <div class="col-md-3">
      <h1 class="btn-right">
        <%= link_to 'Cancel', {action: 'show', id: @recipe.id}, {class: 'btn btn-warning btn-lg'} %>
        <%= f.submit 'Save', {class: 'btn btn-success btn-lg'} %>
      </h1>
    </div>
  </div>

  <%= render partial:  'form', locals: {f: f} %>

  <div class="row action-row">
    <%= f.submit 'Save', {class: 'btn btn-success btn-lg'} %>
    <%= link_to 'Cancel', {action: 'show', id: @recipe.id}, {class: 'btn btn-warning btn-lg'} %>
  </div>

<% end %>
