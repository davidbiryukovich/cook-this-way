<h1>Editing recipe <%= @recipe.name %> </h1>

<%= form_for @recipe, url: {action: 'update'} do |f| %>
  <% if @recipe.errors.any? %>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :name, 'Recipe name' %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :directions, 'Directions' %><br>
    <%= f.text_area :directions %>
  </p>

  <p>
    <%= f.label :servings, 'Servings' %><br>
    <%= f.text_field :servings %>
  </p>

  <p>
    <%= f.label :total_time, 'Total time' %><br>
    <%= f.text_field :total_time %>
  </p>

  <%= f.submit 'Save' %>
  <%= link_to 'Back', action: 'show', id: @recipe.id  %>
<% end %>

<p>

</p>